<Window x:Class="GH.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:GH"
        mc:Ignorable="d"
        Title="Login" Height="512" Width="512" MinHeight="512" MinWidth="512" MaxHeight="512" MaxWidth="512" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="SingleBorderWindow">
    <Grid>
        <Image x:Name="image" Source="src/images/HotelLogo.png" Height="128" MinHeight="128" MinWidth="128" VerticalAlignment="Top" Margin="0,48,189,0" HorizontalAlignment="Right" Width="128"/>
        <TextBox x:Name="NameTextBox" Height="48"  Margin="125,224,125,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" FontFamily="Roboto" FontSize="18"/>
        <materialDesign:PackIcon Grid.Column="0" Kind="Account" Foreground="{Binding ElementName=NameTextBox, Path=BorderBrush}" Width="32" Height="32" Margin="88,240,0,0" RenderTransformOrigin="0.469,0.562"/>

        <materialDesign:PackIcon Grid.Column="0" Kind="Key" Foreground="{Binding BorderBrush, ElementName=passwordBox}" Width="32" Height="32" Margin="88,300,0,0" RenderTransformOrigin="0.469,0.562"/>
        <PasswordBox x:Name="passwordBox" Margin="125,284,125,0" VerticalAlignment="Top" Height="48" Password="password" FontSize="18" FontFamily="Roboto"/>

        <Button x:Name="button" Content="Login now " HorizontalAlignment="center" Margin="0,373,0,0" VerticalAlignment="Top" Width="256" Height="64" FontSize="20" FontFamily="Roboto" Click="button_Click"/>




    </Grid>
</Window>
